section(class='form')
    form( action="http://localhost:8080/birds/createNew", method="post" encType="multipart/form-data" )
        fieldset
            legend="Common Names"
            label(for="primary_name")="Primary Name"
            input(type="text" name="primary_name"  required)
            label(for="english_name")="English Name"
            input(type="text" name="english_name"  required)
            label(for="other_names")="Other Names"
            textarea(name="other_names" rows="10" cols="50")
        fieldset 
            legend="Taxonomy"
            label(for="scientific_name")="Scientific Name"
            input(type="text" name="scientific_name"  required="")
            label(for="order")="Order"
            input(type="text" name="order"  required="")
            label(for="family")="Family"
            input(type="text" name="family"  required="")
        fieldset 
            legend="Size"
            label(for="length")="Length (cm)"
            input( type="number" name="length" )
            label(for="weight")="Weight (g)"
            input(type="number" name="weight" )
        fieldset 
            legend="Conservation"
            label(for="status")="Status"
            select(name="status" id="status")
                    option="Not Threatened"
                    option="Naturally Uncommon"
                    option="Relict"
                    option="Recovering"
                    option="Declining"
                    option="Nationally Increasing"
                    option="Nationally Vulnerable"
                    option="Nationally Endangered"
                    option="Nationally Critical"
                    option="Data Deficient"
        fieldset 
            legend="Photo"
            label(for="photo_credit")="Photo Credit"
            input(type="text" name="photo_credit"  required="")
            label(for="photo_upload")="Upload New Photo"
            input(type="file" name="photo_upload" id="photo_upload")
            label(for="photo_source")="Photo Preview"
            img(id="upload_preview" src=`` )
            input(id="upload_source" type="text" name="photo_source"  readonly="readonly")
        button(type='submit')="Save Bird"
    
                